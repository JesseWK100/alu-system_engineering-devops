#!/usr/bin/env bash
# Exit immediately if a command exits with a non-zero status
set -e

# Update package index
apt-get update -y

# Install Nginx
apt-get install -y nginx

# Write the content to the root HTML file
echo "Holberton School" > /var/www/html/index.html

# Restart Nginx using the service command (not systemctl)
service nginx restart

# Ensure Nginx is listening on port 80 (default configuration)
# If any custom configuration is needed, uncomment the following lines:
# sed -i 's/listen 80 default_server;/listen 80;/' /etc/nginx/sites-available/default
# sed -i 's/listen \[::\]:80 default_server;/listen \[::\]:80;/' /etc/nginx/sites-available/default

# Reload Nginx to apply changes
service nginx reload

# Check if Nginx is running (optional for debugging)
# service nginx status
